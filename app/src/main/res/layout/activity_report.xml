<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Report">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/logoEdit"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/logoDelete"
            android:layout_marginRight="15dp"
            android:layout_above="@+id/logoReport"
            android:src="@drawable/editpensil"/>

        <ImageView
            android:id="@+id/logoDelete"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerInParent="true"
            android:layout_above="@+id/logoReport"
            android:src="@drawable/delete"/>

        <ImageView
            android:id="@+id/logoReport"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_above="@+id/text"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/report1" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/chart1"
            android:layout_margin="15dp"
            android:textStyle="bold"
            android:text="Tingkat Kepatuhan Pasien Mengkonsumsi Obat"
            android:textSize="15dp" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chart1"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chart1"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/add_button_background"
            android:padding="12dp"
            android:text="Kembali"
            android:textColor="#ffffff"
            android:textSize="12dp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>